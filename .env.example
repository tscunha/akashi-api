# =============================================================================
# AKASHI API - Environment Variables
# Copy this file to .env and adjust values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=AKASHI MAM API
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://akashi:akashi_dev_2025@localhost:5432/akashi_mam

# -----------------------------------------------------------------------------
# Object Storage (MinIO/S3)
# -----------------------------------------------------------------------------
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=akashi
S3_SECRET_KEY=akashi_minio_2025
S3_BUCKET_ORIGINALS=akashi-originals
S3_BUCKET_PROXIES=akashi-proxies
S3_BUCKET_THUMBNAILS=akashi-thumbnails

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# RabbitMQ (Celery)
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=amqp://akashi:akashi_rabbit_2025@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=change-this-jwt-secret-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Processing
# -----------------------------------------------------------------------------
FFMPEG_PATH=ffmpeg
PROXY_PRESET=medium
PROXY_CRF=23
THUMBNAIL_WIDTH=320
THUMBNAIL_HEIGHT=180
