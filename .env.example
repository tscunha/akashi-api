# =============================================================================
# AKASHI MAM - Environment Configuration
# =============================================================================
# Copie este arquivo para .env e ajuste os valores
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL + pgvector)
# -----------------------------------------------------------------------------
POSTGRES_USER=akashi
POSTGRES_PASSWORD=akashi_dev_2025
POSTGRES_DB=akashi_mam
POSTGRES_PORT=5433

# Connection URL (usado pela aplicação)
DATABASE_URL=postgresql+asyncpg://akashi:akashi_dev_2025@localhost:5433/akashi_mam

# -----------------------------------------------------------------------------
# STORAGE (MinIO S3-compatible)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=akashi
MINIO_ROOT_PASSWORD=akashi_minio_2025
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Connection settings (usado pela aplicação)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=akashi
S3_SECRET_KEY=akashi_minio_2025
S3_BUCKET_ORIGINALS=akashi-originals
S3_BUCKET_PROXIES=akashi-proxies
S3_BUCKET_THUMBNAILS=akashi-thumbnails

# -----------------------------------------------------------------------------
# CACHE (Redis)
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# MESSAGE BROKER (RabbitMQ)
# -----------------------------------------------------------------------------
RABBITMQ_USER=akashi
RABBITMQ_PASSWORD=akashi_rabbit_2025
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# Celery configuration
CELERY_BROKER_URL=amqp://akashi:akashi_rabbit_2025@localhost:5672/akashi
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
API_PORT=8000
API_HOST=0.0.0.0

# JWT Authentication
JWT_SECRET_KEY=change-this-jwt-secret-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# PROCESSING (FFmpeg)
# -----------------------------------------------------------------------------
FFMPEG_PATH=ffmpeg
PROXY_PRESET=medium
PROXY_CRF=23
THUMBNAIL_WIDTH=320
THUMBNAIL_HEIGHT=180

# -----------------------------------------------------------------------------
# MONITORING (opcional)
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=akashi_grafana_2025
LOKI_PORT=3100

